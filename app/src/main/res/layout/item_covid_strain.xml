<!-- res/layout/item_covid_strain.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?selectableItemBackground">

    <TextView
        android:id="@+id/tvVirusName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virus Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvStructure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Structure"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvAppearanceDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appearance Date"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvVaccineStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vaccine Status"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvWorldInfectionCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="World Infection Count"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvVietnamInfectionCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vietnam Infection Count"
        android:textSize="14sp" />

</LinearLayout>
